<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f1ec"
    tools:context=".Masugid_Ent">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/masugidFooter">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- Rounded Header with Image -->


            <!-- Title -->

        <!-- Description -->

            <LinearLayout
                android:id="@+id/AboutHeader"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="@drawable/about"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Logo Image -->
                <ImageView
                    android:id="@+id/CVDLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/cverde"
                    android:src="@drawable/about_logo" />
            </LinearLayout>

            <TextView
            android:id="@+id/AboutCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="start"
            android:text="@string/aboutcv"
            android:textColor="#1A8433"
            android:textSize="31sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AboutHeader" />

        <TextView
            android:id="@+id/aboutDes"
            android:contentDescription="@string/cv_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppinsregular"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:text="@string/abouts"
            android:textColor="@color/entsoc"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AboutCV" />

        <ImageView
            android:id="@+id/cverdepic"
            android:contentDescription="@string/cvpic"
            android:layout_width="450dp"
            android:layout_height="196dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/plaympic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutDes" />

        <!-- Inquiry Label -->
        <!-- Instagram Section -->

        <TextView
            android:id="@+id/cvEnq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="@string/enqEnt"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/afacad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cverdepic" />

        <ImageView
            android:id="@+id/cv_fb"
            android:contentDescription="@string/cv_fb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/fb_icon"
            app:layout_constraintTop_toBottomOf="@id/cvEnq"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0." />

        <TextView
            android:id="@+id/cv_fb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/cv_fb"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/entsoc"
            android:fontFamily="@font/afacad"
            app:layout_constraintTop_toBottomOf="@id/cvEnq"
            app:layout_constraintStart_toEndOf="@id/cv_fb" />

        <!-- Gmail Section -->
        <ImageView
            android:id="@+id/cv_gmail"
            android:contentDescription="@string/cv_gmail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/gmail_icon"
            app:layout_constraintTop_toBottomOf="@id/cv_fb_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.05" />

        <TextView
            android:id="@+id/cv_mail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/cv_email"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/entsoc"
            android:fontFamily="@font/afacad"
            app:layout_constraintTop_toBottomOf="@id/cv_fb_text"
            app:layout_constraintStart_toEndOf="@id/cv_gmail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

    <LinearLayout
    android:id="@+id/masugidFooter"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@drawable/about_footer"
    android:orientation="horizontal"
    android:padding="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
