<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/BFast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Food Item 1 -->
        <LinearLayout
            android:id="@+id/Bfast1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/eggtoast"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/eggtst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/eggtoast"
                android:textColor="@color/DGreen"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/timerCaloriesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eggtst">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/homes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/eggtstmins"
                    android:textSize="13sp"
                    android:textColor="@color/grayG"
                    android:fontFamily="@font/poppinsregular"/>

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/metabolism" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/eggtstcal"
                    android:textColor="@color/grayG"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsregular"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Food Item 2 -->
        <LinearLayout
            android:id="@+id/Bfast2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/oatmeal"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/pakbet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/oatmeal"
                android:textColor="@color/DGreen"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/timerCaloriesLayout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pakbet">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/homes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/eggtstmins"
                    android:textColor="@color/grayG"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsregular"/>

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/metabolism" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@string/oatmeals1"
                    android:textColor="@color/grayG"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsregular"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Food Item 2 -->
        <LinearLayout
            android:id="@+id/Bfast3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/kamote"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/kamote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="211dp"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/kamote"
                android:textColor="@color/DGreen"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/timerCaloriesLayout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/kamote">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/homes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/eggtstmins"
                    android:textColor="@color/grayG"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsregular"/>

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/metabolism" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@string/kamotes"
                    android:textColor="@color/grayG"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsregular"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
