<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f1ec"
    tools:context=".Masugid_Ent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:background="#FFF4F1"
    tools:context=".PlayMaker_Ent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Rounded Header with Image -->
        <LinearLayout
            android:id="@+id/playmHeader"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/playmbg"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/playm_logo"
            android:contentDescription="@string/playmlogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-75dp"
            android:src="@drawable/playm_circle"
            app:layout_constraintTop_toBottomOf="@id/playmHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/playmDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/playmtitle"
            android:textColor="#000000"
            android:fontFamily="@font/poppinsregular"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/playm_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->

        <TextView
            android:id="@+id/playm_mach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/afacad"
            android:text="@string/jackofpie"
            android:textColor="#777777"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playmDes" />

        <!-- Group Photo -->
        <ImageView
            android:id="@+id/plaympic"
            android:layout_width="450dp"
            android:layout_height="196dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/plaympic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playm_mach" />

        <TextView
            android:id="@+id/playm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="left"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:text="@string/Wani"
            android:textColor="@color/entsoc"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plaympic" />

        <TextView
            android:id="@+id/playm_Des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="fill_horizontal"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:text="@string/playmdesc"
            android:textColor="@color/entsoc"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plaympic" />

        <!-- Products -->
        <TextView
            android:id="@+id/waniProdN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/playmprod"
            android:textColor="#000000"
            android:fontFamily="@font/publicsans_bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/playm_Des"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/jackpie1"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/langkapie1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/waniProdN" />

        <ImageView
            android:id="@+id/jackpie2"
            android:layout_width="550dp"
            android:layout_height="500dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/langkapie2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jackpie1" />


        <!-- Inquiry Label -->

        <TextView
            android:id="@+id/playmEnq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:text="@string/enqEnt"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/afacad"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jackpie2" />

        <ImageView
            android:id="@+id/playm_fb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/fb_icon"
            app:layout_constraintTop_toBottomOf="@id/playmEnq"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0." />

        <TextView
            android:id="@+id/playm_fb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/playm_fb"
            android:textSize="18sp"
            android:textColor="@color/entsoc"
            android:fontFamily="@font/afacad"
            app:layout_constraintTop_toBottomOf="@id/playmEnq"
            app:layout_constraintStart_toEndOf="@id/playm_fb" />

        <!-- Gmail Section -->
        <ImageView
            android:id="@+id/playm_gmail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/gmail_icon"
            app:layout_constraintTop_toBottomOf="@id/playm_fb_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.05" />

        <TextView
            android:id="@+id/mas_mail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="50dp"
            android:text="@string/mas_email"
            android:textSize="18sp"
            android:textColor="@color/entsoc"
            android:fontFamily="@font/afacad"
            app:layout_constraintTop_toBottomOf="@id/playm_fb_text"
            app:layout_constraintStart_toEndOf="@id/playm_gmail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

    <LinearLayout
    android:id="@+id/playMFooter"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@drawable/masugid_footer"
    android:orientation="horizontal"
    android:padding="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

