<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F2D2"
    android:padding="16dp">

    <!-- Top bar with back arrow and "Badges" title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <!-- Back arrow icon -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/back"
            android:padding="4sp"
            app:tint="@color/black" />

        <!-- Replace @drawable/ic_back_arrow with your own back arrow drawable -->

        <!-- Title text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Badges"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- CardView holding badges in a 2Ã—2 grid -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:padding="16dp">

            <!-- Badge 1: Eco Rookie -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/badgeg"
                    android:contentDescription="Eco Rookie" />
                <!-- Replace with your drawable -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Eco Rookie"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Badge 2: Eco Protector -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/bagdeb"
                    android:contentDescription="Eco Protector" />
                <!-- Replace with your drawable -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Eco Protector"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Badge 3: Eco Leader -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/badgebb"
                    android:contentDescription="Eco Leader" />
                <!-- Replace with your drawable -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Eco Leader"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Badge 4: Eco Champion -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/badgey"
                    android:contentDescription="Eco Champion" />
                <!-- Replace with your drawable -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Eco Champion"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
