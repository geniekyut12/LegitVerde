<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lowopacitybg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Back arrow -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/back"
            android:padding="4sp"
            app:tint="@color/black" />

        <!-- Leader Board text beside the arrow -->
        <TextView
            android:id="@+id/leaderboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leader Board"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="8sp"
            android:gravity="center_vertical" />
    </LinearLayout>
    <!-- ==================== PODIUM SECTION ==================== -->

    <!-- Scrollable container for the leaderboard + "You" card -->

    <LinearLayout
        android:id="@+id/podium_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="49sp">

        <!-- SECOND PLACE COLUMN -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Silver Crown -->
            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginBottom="4sp"
                android:src="@drawable/crowny" />

            <!-- Avatar -->
            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginBottom="4sp"
                android:src="@drawable/profileimg" />

            <!-- Title + Points -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:text="Eco Leader"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4sp"
                android:text="1800 points"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <!-- Podium Column (slightly shorter) -->
            <LinearLayout
                android:layout_width="80sp"
                android:layout_height="140sp"
                android:background="#81C784"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- FIRST PLACE COLUMN -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Gold Crown -->
            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginBottom="4sp"
                android:src="@drawable/crowng" />

            <!-- Avatar -->
            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginBottom="4sp"
                android:src="@drawable/girluser" />

            <!-- Title + Points -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:text="Eco Champion"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4sp"
                android:text="2250 points"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <!-- Podium Column (tallest) -->
            <LinearLayout
                android:layout_width="80sp"
                android:layout_height="160sp"
                android:layout_marginBottom="10sp"
                android:background="#4CAF50"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- THIRD PLACE COLUMN -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Bronze Crown -->
            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginBottom="4sp"
                android:src="@drawable/crownb" />

            <!-- Avatar -->
            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginBottom="4sp"
                android:src="@drawable/profileimg" />

            <!-- Title + Points -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:text="Eco Protector"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4sp"
                android:text="800 points"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <!-- Podium Column (shortest) -->
            <LinearLayout
                android:layout_width="70sp"
                android:layout_height="130sp"
                android:background="#81C784"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16sp"
        app:layout_constraintTop_toBottomOf="@id/podium_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ========== LEADERBOARD (white background) ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8sp"
                android:background="@drawable/rounded_white_bg">

                <!-- #4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40dp"
                        android:src="@drawable/profileimg"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player Name"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eco Leader"
                            android:textSize="14sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="950 points"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- #5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8sp" />

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/profileimg"
                        android:layout_marginEnd="8sp" />

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player Name"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eco Leader"
                            android:textSize="14sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="853 points"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8sp" />
                </LinearLayout>

                <!-- #6 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8sp" />

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/profileimg"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player Name"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eco Leader"
                            android:textSize="14sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="750 points"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- #7 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8sp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/profileimg"
                        android:layout_marginEnd="8sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player Name"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eco Leader"
                            android:textSize="14sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="610 points"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- #8 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/profileimg"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player Name"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eco Leader"
                            android:textSize="14sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="600 points"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- #9 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8sp" />

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/profileimg"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player Name"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eco Protector"
                            android:textSize="14sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="589 points"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- #10 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8sp" />

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/profileimg"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player Name"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eco Protector"
                            android:textSize="14sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="281 points"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ========== "YOU" CARD BELOW THE LEADERBOARD ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16sp"
                android:layout_marginTop="-1sp"
                android:background="#C8E6C9">

                <!-- Column 1: Avatar + "You" -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="24sp">

                    <ImageView
                        android:layout_width="48sp"
                        android:layout_height="48sp"
                        android:src="@drawable/girluser"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4sp" />
                </LinearLayout>

                <!-- Column 2: Points -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="24sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4sp" />
                </LinearLayout>

                <!-- Column 3: Level -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="24sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4sp" />
                </LinearLayout>

                <!-- Column 4: Rank -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rank"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eco Rookie"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
