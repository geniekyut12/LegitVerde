<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quesbg"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".YourActivityName">

        <!-- Header with ImageView and TextView -->
        <LinearLayout
            android:id="@+id/qz1n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/afacad"
                android:text="@string/qz1q2"
                android:textColor="@color/Green"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qz1"
            android:layout_width="315dp"
            android:layout_height="550dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/quizlayout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qz1n2">

            <LinearLayout
                android:id="@+id/qz1l2"
                android:layout_width="300dp"
                android:layout_height="230dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/quizlayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/foodLayout">

                <!-- Quiz 1 Q1 -->
                <TextView
                    android:id="@+id/qz1q2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text="@string/qz1q02"
                    android:textColor="@color/Green"
                    android:textSize="19sp"
                    android:textStyle="normal" />
            </LinearLayout>


            <RadioGroup
                android:id="@+id/qz1q2chcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/qz1l1">

                <RadioButton
                    android:id="@+id/btnq2A"
                    android:layout_width="297dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/q3choices"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingStart="10dp"
                    android:text="@string/qz1q2a"
                    android:textColor="#000000"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/btnq2B"
                    android:layout_width="297dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/q3choices"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingStart="10dp"
                    android:text="@string/qz1q2b"
                    android:textColor="#000000"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/btnq2C"
                    android:layout_width="297dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/q3choices"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingStart="10dp"
                    android:text="@string/qz1q2c"
                    android:textColor="#000000"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/btnq2D"
                    android:layout_width="297dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/q3choices"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingStart="10dp"
                    android:text="@string/qz1q2d"
                    android:textColor="#000000"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/btnq2E"
                    android:layout_width="297dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/q3choices"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingStart="10dp"
                    android:text="@string/qz1q2e"
                    android:textColor="#000000"
                    tools:ignore="RtlSymmetry" />
            </RadioGroup>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>